<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

	<xacro:include filename="$(find luh_youbot_description)/urdf/youbot_gripper/limits.urdf.xacro" />
	<xacro:include filename="$(find luh_youbot_description)/urdf/youbot_gripper/gripper.gazebo.xacro" />

	<xacro:macro name="youbot_gripper" params="parent name namespace *origin">

		<!-- joint between arm_7_link and sdh_palm_link -->
		<joint name="${name}_palm_joint" type="fixed" >
			<xacro:insert_block name="origin" />
			<parent link="${parent}" />
			<child link="${name}_palm_link" />
		</joint>

		<link name="${name}_palm_link">
			<inertial>
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<mass value="0.1"/>
				<inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
			</inertial>
			
			<visual>
				<origin xyz="0 0 -0.0139" rpy="0 ${-M_PI/2} ${M_PI/2}"/>
				<geometry>
					<mesh filename="package://luh_youbot_description/meshes/youbot_gripper/palm.dae" />
				</geometry>
			</visual>
			
			<collision>
				<origin xyz="0.003 0 0.01" rpy="0 0 0" />
				<geometry>
					<mesh filename="package://luh_youbot_description/meshes/youbot_gripper/palm_convex.dae" />
				</geometry>
			</collision>
		</link>

		
		
		<joint name="${name}_finger_joint_l" type="prismatic">
			<origin xyz="0.004 0.007 0.0115" rpy="0 0 ${M_PI}" />
			<parent link="${name}_palm_link"/>
			<child link="${name}_finger_link_l"/>
			<axis xyz="0 -1 0" />
			
			<dynamics damping="1.0" friction="1.0" />
			<limit effort="1" velocity="0.1" lower="0" upper="${finger_joint}"/> 
                        <safety_controller k_position="20" k_velocity="25" soft_lower_limit="${threshold}" soft_upper_limit="${finger_joint_soft}" />
		</joint>

		<link name="${name}_finger_link_l">
			<inertial>
				<origin xyz="0 0.00 0" rpy="0 0 0" />
				<mass value="0.01"/>
				<inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
			</inertial>
			
			<visual>
				<origin xyz="0 0 0" rpy="0 ${-M_PI/2} 0" /> <!---->
				<geometry>
					<mesh filename="package://luh_youbot_description/meshes/youbot_gripper/finger.dae" />
				</geometry>
			</visual>
			
			<collision>
				<origin xyz="0 0 0" rpy="0 ${-M_PI/2} 0" />
				<geometry>
					<mesh filename="package://luh_youbot_description/meshes/youbot_gripper/finger_convex.dae" />
				</geometry>
			</collision>
		</link>

               <joint name="${name}_finger_joint_r" type="prismatic">
			<origin xyz="0.004 -0.007 0.0115" rpy="0 0 0" />
			<parent link="${name}_palm_link"/>
			<child link="${name}_finger_link_r"/>
			<axis xyz="0 -1 0" />
			<dynamics damping="1.0" friction="1.0" />
			<limit effort="1" velocity="0.1" lower="0" upper="${finger_joint}"/> 
                        <safety_controller k_position="20" k_velocity="25" soft_lower_limit="${threshold}" soft_upper_limit="${finger_joint_soft}" />
		</joint>

		<link name="${name}_finger_link_r">
			<inertial>
				<origin xyz="0.000 -0.001 0" rpy="0 0 0" />
				<mass value="0.01"/>
				<inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
			</inertial>
			
			<visual>
				<origin xyz="0 0 0" rpy="0 ${-M_PI/2} 0" /> <!-- -->
				<geometry>
					<mesh filename="package://luh_youbot_description/meshes/youbot_gripper/finger.dae" />
				</geometry>
			</visual>
			
			<collision>
				<origin xyz="0 0 0" rpy="0 ${-M_PI/2} 0" />
				<geometry>
					<mesh filename="package://luh_youbot_description/meshes/youbot_gripper/finger_convex.dae" />
				</geometry>
			</collision>
		</link>
		
		<!-- coordinate frame on the tip of the robot's gripper -->
		<joint name="${name}_tip_joint" type="fixed">
			<origin xyz="0.000 0 0.09" rpy="0.0 ${-M_PI / 2} 0.0" />
			<parent link="${name}_palm_link" />
			<child link="${name}_tip"/>
		</joint>
		<link name="${name}_tip">
			<inertial>
				<mass value="0.001" />
				<origin xyz="0 0 0" />
				<inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
			</inertial>
		</link>

                <xacro:youbot_gripper_controller namespace="${namespace}"/>
	</xacro:macro>

</robot>
